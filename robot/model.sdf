<?xml version='1.0'?>
<sdf version='1.4'>
  <model name="robot">
  
  
  
  <static>false</static> <!--this ignore physics of the robot-->
  
  <!--now we are going to create the base frame of the robot-->
  <link name='chassis'>
    <pose>0 0 .1 0 0 0</pose> <!--x y z roll pitch yaw (in radians)-->
   
    <!--Collision is about how the engine collision will identify the body, in this case, like a box with the size of 0.4 0.2 0.1-->
    
    <collision name='collision'>
      <geometry>
        <cylinder>
          <radius>.28</radius>
          <length>0.005</length>
        </cylinder>
      </geometry>
    </collision>
    
    <!--Visual is what we see. Generally the VISUAL and COLLISION are equal-->
    
    <visual name='visual'>
      <geometry>
        <cylinder>
          <radius>.28</radius>
          <length>0.005</length>
        </cylinder>
      </geometry>
    </visual>
  
    <collision name='caster1_collision'>
      <pose>0 -.2 -.05 0 0 0</pose>
      <geometry>
        <sphere>
          <radius>0.05</radius>
        </sphere>
      </geometry>
      
      <surface>
        <friction>
          <ode> <!--ODE = Open Dynamics Engine, is the engine motor that gazebo use to simulate the physics-->
          
            <mu>0</mu> <!-- is the Coulomb friction coefficient for the first friction direction-->
            <mu2>0</mu2> <!-- is the friction coefficient for the second friction direction (perpendicular to the first friction direction). -->
            
            <!--Search about these ones-->
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
  
    <visual name='caster1_visual'>
      <pose>0 -.2 -0.05 0 0 0</pose>
      <geometry>
        <sphere>
          <radius>0.05</radius>
        </sphere>
      </geometry>
    </visual> 
    
     <collision name='caster2_collision'>
      <pose>0 .2 -0.05 0 0 0</pose>
      <geometry>
        <sphere>
          <radius>0.05</radius>
        </sphere>
      </geometry>
      
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
   
    </collision>
  
    <visual name='caster2_visual'>
      <pose>0 .2 -0.05 0 0 0</pose>
      <geometry>
        <sphere>
          <radius>0.05</radius>
        </sphere>
      </geometry>
    </visual> 
   
  </link>
  
  <link name='left_wheel'>
    <pose>-.2 0 0.075 1.57 0 1.57</pose>
  
    <collision name='left_wheel_collision'>
      <geometry>
        <cylinder>
          <radius>0.075</radius>
          <length>0.045</length>
        </cylinder>
      </geometry>
    </collision>
     
    <visual name='left_wheel_visual'>
      <geometry>
        <cylinder>
          <radius>0.075</radius>
          <length>0.045</length>
        </cylinder>
      </geometry>
    </visual>  
  </link>
  
  <link name='right_wheel'>
    <pose>.2 0 0.075 1.57 0 1.57</pose>
     
   <collision name='right_wheel_collision'>
      <geometry>
        <cylinder>
          <radius>0.075</radius>
          <length>0.045</length>
        </cylinder>
      </geometry>
    </collision>
       
    <visual name='right_wheel_visual'>
      <geometry>
        <cylinder>
          <radius>0.075</radius>
          <length>0.045</length>
        </cylinder>
      </geometry>
    </visual>  
  </link>
  
  <joint type='revolute' name='left_wheel_joint'>
    <child>left_wheel</child>
    <parent>chassis</parent>
    <axis>
      <xyz>1 0 0</xyz> <!--Indicate in which axis will be the movement, in this case, in y axis-->
    </axis>
  </joint>
  
  <joint type='revolute' name='right_wheel_joint'>
    <child>right_wheel</child>
    <parent>chassis</parent>
    <axis>
      <xyz>0 0 0</xyz> 
    </axis>
  </joint>
  
  
  </model>
</sdf>
